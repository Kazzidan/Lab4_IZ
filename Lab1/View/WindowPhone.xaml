<Window x:Class="Lab1.View.WindowPhone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1.View"
        mc:Ignorable="d"
        Title="WindowPhone" Height="450" Width="800">
    <StackPanel>
        <ListView x:Name="lvPhone">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Код" Width="50"
                                         DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="ID клиента"
                                         DisplayMemberBinding="{Binding PersonId}"/>
                        <GridViewColumn Header="Телефон"
                                         DisplayMemberBinding="{Binding Phone}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>